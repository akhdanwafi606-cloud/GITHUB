<body>

<div class="container">
    <div class="product-section">
        <h2>Menu Makanan</h2>
        <div class="product-grid" id="product-list">
            </div>
    </div>

    <div class="cart-section">
        <h2>Keranjang</h2>
        <table>
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Qty</th>
                    <th>Subtotal</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody id="cart-items">
                </tbody>
        </table>

        <div class="summary">
            <div class="summary-row total">
                <span>Total:</span>
                <span id="total-price">Rp 0</span>
            </div>
            <div class="summary-row">
                <input type="number" id="cash-input" placeholder="Masukkan Uang Pembeli" />
            </div>
            <button class="pay-btn" onclick="processPayment()">BAYAR</button>
        </div>
    </div>
</div>

<script>
    // --- DATA PRODUK (Simulasi Database) ---
    const products = [
        { id: 1, name: 'Nasi Goreng', price: 15000 },
        { id: 2, name: 'Mie Ayam', price: 12000 },
        { id: 3, name: 'Es Teh Manis', price: 5000 },
        { id: 4, name: 'Kopi Hitam', price: 8000 },
        { id: 5, name: 'Ayam Geprek', price: 20000 },
        { id: 6, name: 'Air Mineral', price: 3000 },
    ];

    let cart = [];

    // --- FUNGSI FORMAT RUPIAH ---
    const formatRupiah = (number) => {
        return new Intl.NumberFormat('id-ID', {
            style: 'currency',
            currency: 'IDR',
            minimumFractionDigits: 0
        }).format(number);
    };

    // --- RENDER DAFTAR PRODUK KE HALAMAN ---
    function renderProducts() {
        const productContainer = document.getElementById('product-list');
        productContainer.innerHTML = '';

        products.forEach(product => {
            const div = document.createElement('div');
            div.className = 'product-card';
            div.onclick = () => addToCart(product.id);
            div.innerHTML = `
                <h3>${product.name}</h3>
                <p>${formatRupiah(product.price)}</p>
            `;
            productContainer.appendChild(div);
        });
    }

    // --- LOGIKA KERANJANG ---
    function addToCart(productId) {
        const product = products.find(p => p.id === productId);
        const existingItem = cart.find(item => item.id === productId);

        if (existingItem) {
            existingItem.qty++;
        } else {
            cart.push({ ...product, qty: 1 });
        }
        renderCart();
    }

    function removeFromCart(productId) {
        cart = cart.filter(item => item.id !== productId);
        renderCart();
    }

    function renderCart() {
        const cartTable = document.getElementById('cart-items');
        const totalDisplay = document.getElementById('total-price');
        cartTable.innerHTML = '';

        let grandTotal = 0;

        cart.forEach(item => {
            const subtotal = item.price * item.qty;
            grandTotal += subtotal;

            const row = document.createElement('tr');
            row.innerHTML = `
                <td>${item.name}</td>
                <td>${item.qty}</td>
                <td>${formatRupiah(subtotal)}</td>
                <td><button class="delete-btn" onclick="removeFromCart(${item.id})">X</button></td>
            `;
            cartTable.appendChild(row);
        });

        totalDisplay.innerText = formatRupiah(grandTotal);
        // Simpan total ke dataset untuk diambil saat bayar
        totalDisplay.dataset.value = grandTotal; 
    }

    // --- LOGIKA PEMBAYARAN ---
    function processPayment() {
        const totalDisplay = document.getElementById('total-price');
        const cashInput = document.getElementById('cash-input');
        
        const total = parseInt(totalDisplay.dataset.value) || 0;
        const cash = parseInt(cashInput.value) || 0;

        if (total === 0) {
            alert("Keranjang masih kosong!");
            return;
        }

        if (cash < total) {
            alert("Uang tidak cukup!");
        } else {
            const change = cash - total;
            alert(`Pembayaran Berhasil!\n\nTotal: ${formatRupiah(total)}\nBayar: ${formatRupiah(cash)}\nKembalian: ${formatRupiah(change)}`);
            
            // Reset Keranjang
            cart = [];
            cashInput.value = '';
            renderCart();
        }
    }

    // Jalankan render awal
    renderProducts();

</script>

</body>
</html>
